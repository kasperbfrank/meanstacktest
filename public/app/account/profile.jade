.container
    .well
        form.form-horizontal(name="profileForm")
            fieldset
                legend User Profile
                .form-group
                    label.col-md-2.control-label(for="email") Email
                    .col-md-10
                        input.form-control(name="email", type="email", placeholder="Email", ng-model="vm.email", required)
                .form-group
                    label.col-md-2.control-label(for="fname") First Name
                    .col-md-10
                        input.form-control(name="fname", type="text", placeholder="First Name", ng-model="vm.firstName", required)
                .form-group
                    label.col-md-2.control-label(for="lname") Email
                    .col-md-10
                        input.form-control(name="lname", type="text", placeholder="Last Name", ng-model="vm.lastName", required)
                .form-group
                    label.col-md-2.control-label(for="password") Password
                    .col-md-10
                        input.form-control(name="password", type="password", placeholder="Password", ng-model="vm.password")
                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-right
                            button.btn.btn-primary(ng-click="vm.update()", ng-disabled="profileForm.$invalid") Update
                            | &nbsp;
                            a.btn.btn-default(href="/") Cancel
