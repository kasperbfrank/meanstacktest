.container
    .pull-right
        form.form-inline
            input.form-control(ng-model="searchText", placeholder="Search")
    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th Title
                th Featured
        tbody
            tr(ng-repeat="course in vm.courses | filter:searchText")
                td  
                    a(href="/courses/{{course._id}}") {{course.title}}
                td(ng-show="course.featured") Yes
                td(ng-hide="course.featured") No
